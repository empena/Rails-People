<h1>New</h1>
<p>Add a new person with the form below:</p>

<%= form_for @person do |f| %>
<p><%= f.label :first_name%>
<%= f.text_field :first_name%></p>
<p><%= f.label :last_name%>
<%= f.text_field :last_name%></p>
<p><%= f.label :age%>
<%= f.text_field :age%></p>
<p><%= f.label :hair_color%>
<%= f.text_field :hair_color%></p>
<p><%= f.label :eye_color%>
<%= f.text_field :eye_color%></p>
<p><%= f.label :gender%>
<%= f.text_field :gender%></p>
<p><%= f.submit %></p>
<% end %>